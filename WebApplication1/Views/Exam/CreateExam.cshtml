@model Exam
@{
    ViewData["Title"] = "CreateExam";
}

<h2>CreateExam</h2>

@Html.ActionLink("Show All Exams", "AllExams", "Exam")

@using (Html.BeginForm("ExamCreated", "Exam", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(n => n.name)
        @Html.TextBoxFor(n => n.name, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.mark)
        @Html.TextBoxFor(a => a.mark, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.mark, "", new { @class = "text-danger" })


    </div>

    <button type="submit" class="btn btn-success">Create Exam</button>

}


